doctype html
html
  head
    title Domain Tracker
    link(rel='stylesheet', href='styles.css')
  body
    h1 Domain Tracker
    div#button-container
      button#copy-domains-button Copy
      div#message-container
        div#status-message(style='display: none;')
        div#fallback-key-message(style='display: none;')
      button#clear-button Clear
    ul#domain-list
    button#show-json-button Show JSON Response
    div#json-response(style='display: none;')
    button#show-console-button Show Console
    // Console Filters - Added Here
    div#console-filters(style='display: none;')
      div.filter-group
        strong Filter by Script:
        label
          input(type="checkbox" id="filter-script-popup" value="popup" checked)
          | Popup
        label
          input(type="checkbox" id="filter-script-background" value="background" checked)
          | Background
        label
          input(type="checkbox" id="filter-script-options" value="options" checked)
          | Options
      div.filter-group
        strong Filter by Level:
        label
          input(type="checkbox" id="filter-level-log" value="log" checked)
          | Log
        label
          input(type="checkbox" id="filter-level-warn" value="warn" checked)
          | Warn
        label
          input(type="checkbox" id="filter-level-error" value="error" checked)
          | Error
    div#console-output(style='display: none;')
    script(src='popup.js')
    // Link to Options page
    div(style='margin-top: 15px; text-align: center; font-size: 0.9em;')
      a(href="options.html" target="_blank") Extension Settings
